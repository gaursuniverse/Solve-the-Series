import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;
public class Demo {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int p =7;
        for (int i = 0; i < n ; i++) {
            if( i == 0){
                p = 7;
            }
            else{
                p = (p * 2)+i;

            }
        }
        System.out.println(p);
    }
}
